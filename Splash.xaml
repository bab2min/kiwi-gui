<Window x:Class="KiwiGui.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KiwiGui"
        mc:Ignorable="d" Height="360" Width="480" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <DockPanel>
        <Label DockPanel.Dock="Top" FontSize="20" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,0,0,30">
            지능형 한국어 형태소 분석기 Kiwi
        </Label>
        <ProgressBar DockPanel.Dock="Bottom" Height="40" Margin="0,30,0,0" Name="Loader" IsIndeterminate="True">

        </ProgressBar>
        <Grid>
            <Grid.Background>
                <ImageBrush Stretch="Uniform" ImageSource="kiwi_icon.ico"/>
            </Grid.Background>
        </Grid>
    </DockPanel>
</Window>
