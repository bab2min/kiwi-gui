<Window 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="KiwiGui.DialectSelectDlg"
    xmlns:local="clr-namespace:KiwiGui"
    Title="방언 선택 대화상자"
    Height="270"
    Width="240"
    MinHeight="270"
    MinWidth="240"
    ResizeMode="CanResizeWithGrip"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">

    <StackPanel Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <RadioButton Name="Standard" Content="표준어만" IsChecked="True" Checked="Standard_Checked" />
                <RadioButton Name="All" Content="모든 방언" IsChecked="False" Checked="All_Checked" />

                <CheckBox Name="Gyeonggi" Content="경기" IsChecked="False" Checked="Selection_Changed" Unchecked="Selection_Changed"/>
                <CheckBox Name="Chungcheong" Content="충청" IsChecked="False" Checked="Selection_Changed" Unchecked="Selection_Changed"/>
                <CheckBox Name="Gangwon" Content="강원" IsChecked="False" Checked="Selection_Changed" Unchecked="Selection_Changed"/>
                <CheckBox Name="Gyeongsang" Content="경상" IsChecked="False" Checked="Selection_Changed" Unchecked="Selection_Changed"/>
                <CheckBox Name="Jeolla" Content="전라" IsChecked="False" Checked="Selection_Changed" Unchecked="Selection_Changed"/>
                <CheckBox Name="Jeju" Content="제주" IsChecked="False" Checked="Selection_Changed" Unchecked="Selection_Changed"/>
                <CheckBox Name="Hwanghae" Content="황해" IsChecked="False" Checked="Selection_Changed" Unchecked="Selection_Changed"/>
                <CheckBox Name="Hamgyeong" Content="함경" IsChecked="False" Checked="Selection_Changed" Unchecked="Selection_Changed"/>
                <CheckBox Name="Pyeongan" Content="평안" IsChecked="False" Checked="Selection_Changed" Unchecked="Selection_Changed"/>
                <CheckBox Name="Archaic" Content="옛말" IsChecked="False" Checked="Selection_Changed" Unchecked="Selection_Changed"/>
            </StackPanel>
            <GroupBox Header="주의" Margin="10,0,0,0">
                <TextBlock TextWrapping="Wrap" Width="100">
                    방언 분석을 활성화하려면 4GB 이상의 RAM이 필요하며
                    모델 로딩 시에 더 긴 시간이 더 걸릴 수 있습니다.
                </TextBlock>
            </GroupBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Name="OKBtn" Content="확인" Width="60" Margin="5,0,5,0" Click="OKBtn_Click"/>
            <Button Name="CancelBtn" Content="취소" Width="60" Margin="5,0,5,0" Click="CancelBtn_Click"/>
        </StackPanel>
    </StackPanel>
</Window>